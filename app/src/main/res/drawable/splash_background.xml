<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- خلفية داكنة بالكامل -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/slate_950"/>
        </shape>
    </item>
    
    <!-- خط مسح ضوئي (Scanline) متحرك -->
    <item android:gravity="top">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/cold_blue"
                android:centerColor="@color/cold_blue_light"
                android:endColor="@color/cold_blue"
                android:angle="90"
                android:type="linear"/>
            <size android:height="3dp"/>
        </shape>
    </item>
    
    <!-- حدود علوية وسفلية زرقاء -->
    <item android:gravity="top">
        <shape android:shape="rectangle">
            <solid android:color="@color/cold_blue"/>
            <size android:height="1dp"/>
        </shape>
    </item>
    
    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <solid android:color="@color/cold_blue"/>
            <size android:height="1dp"/>
        </shape>
    </item>
</layer-list>
